-provide(:title, 'Home')
%h1 All books

.row
  .col-md-5.col-md-offset-3
    .books-options
      = link_to('Add book', search_api_path) if current_user_admin?
      = form_with(url: search_path, scope: :query, local: true) do |f|
        = f.text_field :query_text, class: 'form-control', placeholder: 'Search by title, author or genre'

        = f.submit 'Go', class: 'btn btn-primary'
      
    - if current_user_admin?
      %br
      = link_to 'Generate .csv report', '#', class: 'btn btn-primary'
      = link_to 'Generate .pdf report', '#', class: 'btn btn-primary'

    = render 'books_list'
