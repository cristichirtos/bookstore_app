-provide(:title, 'Home')
%h3 All books

.row
  .col-12.col-md-5
    %ul.list-group
      - @books.each do |book|
        %a.book-path{href: book_path(book)}
          %li.list-group-item.d-flex.justify-content-between.align-items-center.dropdown
            = book.title
            - case book.quantity 
            - when 0
              %span.label.label-pill.label-default= book.quantity 
            - when 1..5
              %span.label.label-pill.label-danger= book.quantity 
            - else 
              %span.label.label-pill.label-primary= book.quantity
