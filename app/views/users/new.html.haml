- provide :title, 'Sign up'
%h1 Sign up

.row
  .col-md-6.col-md-offset-3
    = form_with(model: @user, local: true) do |f|
      = render 'shared/error_messages', object: @user

      = f.label :username
      = f.text_field :username, class: 'form-control'

      = f.label :password
      = f.password_field :password, class: 'form-control'

      = f.label :password_confirmation, "Confirmation"
      = f.password_field :password_confirmation, class: 'form-control'

      = f.label :role, 'R u admin? (For easier testing of admin functionality)'
      %br
      %input{type: 'radio', id: 'yes', name: 'user[admin]', value: 'yes', class: 'form-check-input'}
      %label{for: 'yes', class: 'form-check-label'}Yes 
      %br
      %input{type: 'radio', id: 'no', name: 'user[admin]', value: 'no', class: 'form-check-input'}
      %label{for: 'no', class: 'form-check-label'}No 

      = f.submit 'Create my account', class: 'btn btn-primary'
    
    = link_to 'Back', root_path
